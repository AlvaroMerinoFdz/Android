<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EjercicioDados" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="botones" parent="Theme.EjercicioDados">
        <item name="android:backgroundTint">@color/verdeBoton</item>
    </style>

    <style name="imagen" parent="Theme.EjercicioDados">
        <item name="android:layout_height">300px</item>
        <item name="android:layout_width">300px</item>
    </style>

    <style name="texto" parent="Theme.EjercicioDados">
        <item name="android:textSize">60sp</item>
    </style>

</resources>